<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reqbtn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#E5FAFB">

        <TextView
            android:id="@+id/l_typetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_supervisor_account_24"
            android:text="type"
            android:textColor="#910B0B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/l_nametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="2dp"
            android:text="name"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/l_datetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="19dp"
            android:text="date"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/l_msgtxt"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_sent_msg_left"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="message.."
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/r_typetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:drawableRight="@drawable/ic_baseline_supervisor_account_24"
            android:text="type"
            android:textColor="#910B0B"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/r_nametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="2dp"
            android:text="name"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/r_datetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="19dp"
            android:text="date"
            android:textColor="#000000"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/r_msgtxt"
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/background_sent_msg"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="message.."
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>